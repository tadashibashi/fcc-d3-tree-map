*
    margin: 0
    padding: 0

user-select($n)
    -moz-user-select: $n
    -webkit-user-select: $n
    -ms-user-select: $n
    user-select: $n

nav 
    margin 1rem auto
    div
        width: 50%
        margin: auto
    ul
        list-style: none
        width: auto
        display: flex
        justify-content: center
        user-select(none)
        cursor: default
    li
        display: inline-block
        margin-left: 2rem
        color: black

        &:active
            color: rgb(82, 82, 82)


h1, h2
    text-align: center

h1
    font-family: sans-serif
    font-size: 3rem
    font-weight: normal
    margin-bottom: .5rem
    

h2
    font-family: sans-serif
    font-weight: normal
    font-size: 1rem
    margin-bottom: 2rem

svg.graph
    display: block
    margin: 0 auto 2rem auto

    rect
        cursor: crosshair

.tooltip
    font-family: sans-serif
    font-size: .8rem
    padding: .25rem
    background-color: rgba(255, 255, 255, 0.996)
    box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.254)
    border-radius: 4px

    p
        margin: .1rem
        padding: 0

.legend
    width: 40%
    display: grid
    grid-template-columns: 1fr 1fr 1fr
    grid-auto-rows: auto
    justify-content: right
    margin: auto
    margin-bottom: 2rem
    padding-left: 10%
    .item
        display: flex
        justify-content: left
        margin-bottom: .5rem
        .text
            font-family: sans-serif
        
        .color-box
            display: block
            width: 1rem
            height: 1rem

            margin-right: .5rem
